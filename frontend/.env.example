# Frontend Environment Variables
# Copy this file to .env for local development or production

# ==========================================
# DEPLOYMENT CONFIGURATION
# ==========================================
# These values are auto-populated by the deployment script (scripts/deploy.sh)
# For production, run: yarn deploy (from root or infra directory)

# API Gateway URL (auto-populated during deployment)
# For local development: http://localhost:3000
# For production: Will be set automatically from CDK outputs
VITE_API_URL=http://localhost:3000

# CloudFront Distribution URL (auto-populated during deployment)
# For local development: http://localhost:5173
# For production: Will be set automatically from CDK outputs
VITE_FRONTEND_URL=http://localhost:5173

# ==========================================
# API ENDPOINTS (relative paths)
# ==========================================
VITE_LOGIN_ENDPOINT=/auth/login
VITE_GAMES_ENDPOINT=/games
VITE_STUDENTS_ENDPOINT=/students
VITE_TEACHERS_ENDPOINT=/teachers
VITE_UPLOAD_ENDPOINT=/upload
VITE_DOWNLOAD_ENDPOINT=/download

# ==========================================
# SCRATCH API CONFIGURATION
# ==========================================
VITE_SCRATCH_API_BASE=https://api.scratch.mit.edu/projects
VITE_SCRATCH_EMBED_BASE=https://scratch.mit.edu/projects

# ==========================================
# TIMER CONFIGURATION
# ==========================================
# Timer Configuration (in milliseconds)
VITE_TIMER_WARNING=3600000
# 1 hour = 3600000 ms

# File Upload Limits
VITE_MAX_FILE_SIZE=10485760
# 10 MB = 10485760 bytes
VITE_MAX_FILE_ROWS=10000
