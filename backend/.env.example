# ===========================================
# DynamoDB Local Development Configuration
# ===========================================

# DynamoDB Configuration
# Set to 'local' for local development, 'aws' for production
DYNAMODB_MODE=local

# DynamoDB Local Endpoint (only used when DYNAMODB_MODE=local)
DYNAMODB_ENDPOINT=http://localhost:8000

# AWS Region
AWS_REGION=us-east-1

# AWS Credentials for Local Development
# These are dummy credentials for DynamoDB Local
AWS_ACCESS_KEY_ID=local
AWS_SECRET_ACCESS_KEY=local

# Table Names (same as production for consistency)
STUDENTS_TABLE_NAME=ho-yu-students
TEACHERS_TABLE_NAME=ho-yu-teachers
GAMES_TABLE_NAME=ho-yu-games

# ===========================================
# Mock Server Configuration
# ===========================================

# Port for the mock server
PORT=3000

# ===========================================
# Frontend Configuration
# ===========================================

# API URL for frontend
VITE_API_URL=http://localhost:3000
